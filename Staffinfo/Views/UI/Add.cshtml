@model Staffinfo.Models.StaffViewModel
@{
    ViewData["Title"] = "Add";
}

<h1>Add Staffs</h1>
<form asp-controller="UI" asp-action="Add" method="post" enctype="multipart/form-data">
    <div>
            <label asp-for="FullName"> Enter FullName</label>
            <input type="text" asp-for="FullName" placeholder="Enter your Name here" /><br />
            <label asp-for="Address"> Enter Address</label>
            <input type="text" asp-for="Address" placeholder="Enter Address here:" /><br />
            <label asp-for="Gender"> Enter Gender</label>
            <input type="text" asp-for="Gender" placeholder="Enter Gender here:" /><br />
            <input id="uploadfile" type="file" asp-for="File" />
            <button type="submit" class="btn btn-primary">Upload File</button><br />
            <button type="submit" class="btn btn-primary">Save Staffs</button>
    </div>  
</form>


